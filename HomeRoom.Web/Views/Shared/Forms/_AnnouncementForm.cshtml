

@model HomeRoom.Web.Models.Messages.AnnouncementViewModel

<form id="announcementForm" class="form-horizontal" method="post" action="@Url.Action("Announcement", "Announcement")">
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ClassId)
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Title</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Title" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Announcement</label>
        </div>
        <div class="col-sm-9">
            @Html.TextAreaFor(model => model.Text, new { @class = "form-control", placeholder = "Announcement" })
        </div>
    </div>
</form>