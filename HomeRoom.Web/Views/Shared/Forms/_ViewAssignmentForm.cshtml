
@model HomeRoom.GradeBook.Assignment

<form id="classAssignmentForm" class="form-horizontal" method="post">

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Name</label>
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @disabled="disabled", placeholder = "Name of Assignment Type" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Description</label>
        </div>
        <div class="col-sm-8">
            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @disabled = "disabled", placeholder = "Description of Assignment" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Start Date</label>
        </div>
        <div class="col-sm-8">
            <div class="input-group date" id="assignmentStartDate">
                @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", @disabled = "disabled" , placeholder = "Start Date" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Due Date</label>
        </div>
        <div class="col-sm-8">
            <div class="input-group date" id="assignmentDueDate">
                @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control", @disabled = "disabled", placeholder = "Due Date" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Assignment Status</label>
        </div>
        <div class="col-sm-8">
            @Html.EnumDropDownListFor(model => model.Status, new { @class = "form-control", @disabled = "disabled" })
        </div>
    </div>
</form>