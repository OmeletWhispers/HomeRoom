@using Microsoft.Ajax.Utilities
@model HomeRoom.Web.Models.ClassEnrollment.EnrollStudentViewModel


<form id="enrollStudentForm" action="@Url.Action("EnrollStudent", "Class")" method="post" class="form-horizontal">
    @Html.HiddenFor(model => model.ClassId)
    @Html.HiddenFor(model => model.StudentId)


    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Student First Name</label>
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.StudentFirstName, new { @class = "form-control", placeholder = "Student First Name" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Student Last Name</label>
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.StudentLastName, new { @class = "form-control", placeholder = "Student Last Name" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-4">
            <label class="control-label">Student Email</label>
        </div>
        <div class="col-sm-8">
            @Html.TextBoxFor(model => model.StudentEmail, new { @class = "form-control", placeholder = "Student Email Address" })
        </div>
    </div>

    <hr />


    @Html.HiddenFor(model => model.ParentId)

    @if (!Model.StudentEmail.IsNullOrWhiteSpace())
    {
        <div class="form-group">
            <div class="col-sm-4">
                <label class="control-label">Parent First Name</label>
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.ParentFirstName, new { @class = "form-control", placeholder = "Parent First Name" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4">
                <label class="control-label">Parent Last Name</label>
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.ParentLastName, new { @class = "form-control", placeholder = "Parent Last Name" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-4">
                <label class="control-label">Parent Email</label>
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.ParentEmailAddress, new { @class = "form-control", placeholder = "Parent Email" })
            </div>
        </div>
    }
    

</form>
