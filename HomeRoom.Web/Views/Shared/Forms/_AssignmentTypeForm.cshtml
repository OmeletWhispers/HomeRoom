
@model HomeRoom.Web.Models.Gradebook.AssignmentTypeViewModel

<form id="assignmentTypeForm" class="form-horizontal" method="post" action="@Url.Action("AssignmentType", "AssignmentType")">
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.ClassId)
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Name</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Name of Assignment Type" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Percentage</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.PercentageValue, new { @class = "form-control", placeholder = "Subject Area" })
        </div>
    </div>
</form>