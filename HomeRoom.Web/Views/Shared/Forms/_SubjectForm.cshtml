@model HomeRoom.Web.Models.TestGenerator.SubjectViewModel
    


<form id="subjectForm" class="form-horizontal" method="post" action="@Url.Action("Subject", "Subject")">
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Subject Name</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Subject Name" })
        </div>
    </div>
</form>