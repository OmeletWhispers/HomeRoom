@using HomeRoom.Enumerations
@model HomeRoom.Web.Models.Membership.UserViewModel

<form id="usersForm" action="@Url.Action("Users","Users")" method="post" class="form-horizontal">
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">First Name</label>
        </div>
        <div class="col-sm-9">
            <input type="text" name="FirstName" placeholder="First Name" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Last Name</label>
        </div>
        <div class="col-sm-9">
            <input type="text" name="LastName" placeholder="Last Name" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Email</label>
        </div>
        <div class="col-sm-9">
            <input type="text" name="Email" placeholder="Email Address" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Gender</label>
        </div>
        <div class="col-sm-9">
            @Html.EnumDropDownListFor(model => model.Gender, new {@class = "form-control"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Account Type</label>
        </div>
        <div class="col-sm-9">
            @Html.EnumDropDownListFor(model => model.AccountType, new { @class = "form-control" })
        </div>
    </div>

</form>