@model HomeRoom.Web.Models.TestGenerator.CategoryViewModel


<form id="categoryForm" class="form-horizontal" method="post" action="@Url.Action("Category", "Category")">
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Category Name</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.CategoryName, new {@class = "form-control", placeholder = "Category Name"})
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Subject</label>
        </div>
        <div class="col-sm-9">
            @Html.DropDownListFor(model => model.SubjectId, Model.SubjectSelectList, new {@class = "form-control"})
        </div>
    </div>
</form>