@model HomeRoom.Web.Models.ClassEnrollment.ClassFormViewModel

<form id="classForm" class="form-horizontal" method="post" action="@Url.Action("Class", "Class")">
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Class Name</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Class Name" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Subject</label>
        </div>
        <div class="col-sm-9">
            @Html.TextBoxFor(model => model.Subject, new { @class = "form-control", placeholder = "Subject Area" })
        </div>
    </div>
</form>
