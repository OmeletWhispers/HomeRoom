@model List<HomeRoom.ClassEnrollment.Dtos.ParentStudentClassesDto>

<table class="table table-striped" id="parentStudentClasses">
    <thead>
        <tr>
            <th>Class</th>
            <th>Teacher</th>
            <th>Current Grade</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.ActionLink(item.ClassName, "ParentClasses", "Class")</td>
            <td>@item.Teacher</td>
            <td>@item.Grade</td>
        </tr>
    }
    </tbody>
    <tfoot></tfoot>
</table>
