@model HomeRoom.Web.Models.TestGenerator.TestGeneratorViewModel

<div class="col-sm-12">
    <div class="form-group">
        <div class="col-sm-3">
            <label class="control-label">Select Assignment</label>
        </div>
        <div class="col-sm-9">
            @Html.DropDownListFor(model => model.AssignmentId, Model.AssignmentSelectList, new { @class = "form-control", @id = "assignmentSelectList" })
        </div>
    </div>
</div>
<br />
<hr />


<div class="col-sm-4">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Filters</h3>
        </div>
        <div class="panel-body" id="questionFilterPanel">
            <div class="form-group">
                <div class="col-sm-12">
                    <label class="control-label">Subject</label>
                </div>
                <div class="col-sm-12">
                    @Html.DropDownList("Subject", Model.SubjectSelectList, new { @class = "form-control", @id = "subjectFilterSelectList" })
                </div>
            </div>
            <div id="categoryFilterDiv">

            </div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-3">
                    <button id="applyFilters" class="btn btn-primary">Apply Filters</button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="form-group" id="testGeneratorDiv">

</div>
<div class="form-group">
    <div class="col-sm-12">
        <button id="previewTest" class="btn btn-info pull-right">Preview Test</button>&nbsp;
        <button id="saveTestGeneratorBtn" class="btn btn-primary pull-right">Save</button>
    </div>
</div>
