@using Abp.Web.Mvc.Extensions
@model HomeRoom.Web.Models.Teacher.ManageClassViewModel

@{
    var classDivId = string.Format("class_{0}", Model.ClassId);
    ViewBag.Title = string.Format("Manage Course-{0}", Model.ClassName);
}

@section styles
{
    @Html.IncludeStyle("~/Content/dragula.css")
    @Html.IncludeStyle("~/css/testGenerator.css")
}

@section scripts
{
    @Html.IncludeScript("~/Scripts/dragula.js")
    @Html.IncludeScript("~/Views/Class/ClassAnnouncements.js")
    @Html.IncludeScript("~/Views/Class/ClassEnrollment.js")
    @Html.IncludeScript("~/Views/Class/ClassAssignmentType.js")
    @Html.IncludeScript("~/Views/Class/ClassAssignments.js")
    @Html.IncludeScript("~/Views/Class/ClassGradeBook.js")
    @Html.IncludeScript("~/js/TestGenerator.js")
}

<a href="@Url.Action("Index","Class")" class="btn btn-primary"><i class="fa fa-step-backward" aria-hidden="true"></i>&nbsp; Back to Your Classes</a>

<h2>@Model.ClassName</h2>

@Html.HiddenFor(model => model.ClassId)


<div id="@classDivId">
    <div id="manageClassNavigation">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#dashboard" data-tab="dashboard" aria-controls="dashboard" data-toggle="tab" role="tab">Dashboard</a></li>
            <li role="presentation" class=""><a href="#manageStudents" data-tab="manageStudents" aria-controls="manageStudents" data-toggle="tab" role="tab">Students</a></li>
            <li role="presentation" class=""><a href="#manageAssignmentTypes" data-tab="manageAssignmentTypes" aria-controls="manageStudents" data-toggle="tab" role="tab">Assignment Types</a></li>
            <li role="presentation" class=""><a href="#manageAssignments" data-tab="manageAssignments" aria-controls="manageAssignments" data-toggle="tab" role="tab">Assignments</a></li>
            <li role="presentation" class=""><a href="#manageGradebook" data-tab="manageGradebook" aria-controls="manageGradebook" data-toggle="tab" role="tab">Gradebook</a></li>
            <li role="presentation" class=""><a href="#testGenerator" data-tab="testGenerator" aria-controls="testGenerator" data-toggle="tab" role="tab">Test Generator</a></li>
        </ul>
    </div>

    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade in active" id="dashboard">@Html.Action("ManageClassDashboard", "Class", new {classId = Model.ClassId})</div>
        <div role="tabpanel" class="tab-pane fade" id="manageStudents">@Html.Action("ManageClassEnrollments", "Class")</div>
        <div role="tabpanel" class="tab-pane fade" id="manageAssignmentTypes">@Html.Action("ManageClassAssignmentTypes","Class")</div>
        <div role="tabpanel" class="tab-pane fade" id="manageAssignments">@Html.Action("ManageClassAssignments","Class")</div>
        <div role="tabpanel" class="tab-pane fade" id="manageGradebook">@Html.Action("ManageClassGradeBook", "Class", new {classId = Model.ClassId})</div>
        <div role="tabpanel" class="tab-pane fade" id="testGenerator">@Html.Action("ManageTestGenerator", "Class", new { classId = Model.ClassId })</div>
    </div>
</div>

